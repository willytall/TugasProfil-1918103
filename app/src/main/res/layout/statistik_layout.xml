    <TextView
        android:id="@+id/jApps2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="153"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/jFollowers3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textFollowers2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jFollowers"
        android:layout_centerHorizontal="true"
        android:text="Followers"
        app:layout_constraintEnd_toEndOf="@+id/jFollowers3"
        app:layout_constraintStart_toStartOf="@+id/jFollowers3"
        app:layout_constraintTop_toBottomOf="@+id/jFollowers3" />

    <TextView
        android:id="@+id/jFollowers3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
